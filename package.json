{
  "version": "0.1.20",
  "repository": "git://github.com/basementstudio/react-shopify-drop.git",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": "bin/index.js",
  "files": [
    "dist",
    "generate.d.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "yarn build:react && yarn build:generate",
    "build:react": "tsdx build",
    "build:generate": "tsc --project tsconfig.generate.json",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx ",
    "lint:fix": "yarn lint --fix",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "gql-codegen": "graphql-codegen --config gql-codegen.yml -r dotenv/config"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "name": "react-shopify-drop",
  "author": "Moran Santiago <santiago@basement.studio>",
  "module": "dist/react-shopify-drop.esm.js",
  "size-limit": [
    {
      "path": "dist/react-shopify-drop.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-shopify-drop.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-graphql-request": "^4.3.2",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "arg": "^5.0.1",
    "dotenv": "^16.0.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "zod": "^3.14.4"
  },
  "dependencies": {
    "graphql": "^16.3.0",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6",
    "swr": "^1.1.1",
    "zustand": "^3.7.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "tabWidth": 2,
    "printWidth": 80,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "react-hooks",
      "simple-import-sort",
      "@typescript-eslint"
    ],
    "ignorePatterns": [],
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/display-name": 0,
      "react/prop-types": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/no-unescaped-entities": 0,
      "curly": [
        "error",
        "multi-line"
      ],
      "react/jsx-no-target-blank": [
        2,
        {
          "allowReferrer": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        1,
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "prettier/prettier": [
        "warn"
      ],
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true,
          "project": "."
        }
      },
      "react": {
        "version": "detect"
      }
    }
  }
}
