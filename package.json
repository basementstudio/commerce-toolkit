{
  "name": "commerce-toolkit",
  "namespace": "@bsmnt",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "examples/*",
    "packages/*",
    "internal/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@bsmnt/storefront-hooks --filter=@bsmnt/drop --filter=@bsmnt/sdk-gen --filter=@bsmnt/shopify-helpers",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "generate": "turbo run generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "version:packages": "pnpm changeset version",
    "release": "pnpm build:packages && pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {},
  "packageManager": "pnpm@9.15.0"
}
